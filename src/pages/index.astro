<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8" />
  <title>TEMURrentUZ â€“ Car Rental</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>

  <style>
    :root{
      --primary:#3b82f6;
      --dark:#070b14;
      --card:rgba(255,255,255,.06);
      --border:rgba(255,255,255,.12);
    }
    *{margin:0;padding:0;box-sizing:border-box;font-family:Inter,sans-serif}
    body{
      background:radial-gradient(circle at top right,#1e293b,#070b14);
      color:#fff;min-height:100vh
    }
    header{
      padding:18px 6%;
      display:flex;
      justify-content:space-between;
      align-items:center;
      border-bottom:1px solid var(--border)
    }
    .logo{font-size:26px;font-weight:900;color:var(--primary)}
    .container{max-width:900px;margin:40px auto;padding:20px}
    .card{
      background:var(--card);
      border:1px solid var(--border);
      border-radius:22px;
      padding:28px;
      margin-bottom:28px
    }
    input,button{
      width:100%;
      padding:14px;
      border-radius:12px;
      border:1px solid var(--border);
      background:#0f172a;
      color:white;
      margin-bottom:14px
    }
    button{
      background:var(--primary);
      font-weight:700;
      cursor:pointer
    }
    .hidden{display:none}
    .cars{
      display:grid;
      grid-template-columns:repeat(auto-fit,minmax(220px,1fr));
      gap:20px
    }
    .car{
      background:rgba(255,255,255,.05);
      padding:18px;
      border-radius:18px;
      border:1px solid var(--border)
    }
  </style>
</head>

<body>

<header>
  <div class="logo">TEMURrentUZ</div>
  <div id="userLabel">Guest</div>
</header>

<div class="container">

  <!-- REGISTER -->
  <div class="card" id="registerBox">
    <h2>Roâ€˜yxatdan oâ€˜tish</h2>
    <input id="name" placeholder="Ism Familiya">
    <input id="phone" placeholder="Telefon">
    <button onclick="register()">Davom etish</button>
  </div>

  <!-- ADD CAR -->
  <div class="card hidden" id="addCarBox">
    <h2>Mashina qoâ€˜shish</h2>
    <input id="model" placeholder="Model">
    <input id="location" placeholder="Joylashuv">
    <input id="price" placeholder="Narx ($/kun)">
    <button onclick="addCar()">Joylash</button>
  </div>

  <!-- LIST -->
  <div class="card hidden" id="carsBox">
    <h2>Mavjud mashinalar</h2>
    <div class="cars" id="cars"></div>
  </div>

</div>

<!-- Supabase CDN (MUHIM) -->
<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>

<script>
  /* ðŸ”´ SHU YERNI Oâ€˜ZGARTIR ðŸ”´ */
  const SUPABASE_URL = "https://YOUR_PROJECT_ID.supabase.co";
  const SUPABASE_ANON_KEY = "YOUR_PUBLIC_ANON_KEY";

  const supabase = supabaseJs.createClient(
    SUPABASE_URL,
    SUPABASE_ANON_KEY
  );

  let currentUser = null;

  async function register(){
    const name = document.getElementById("name").value;
    const phone = document.getElementById("phone").value;

    if(!name || !phone){
      alert("Ma'lumotlarni toâ€˜ldir");
      return;
    }

    currentUser = { name, phone };
    document.getElementById("userLabel").innerText = name;

    document.getElementById("registerBox").classList.add("hidden");
    document.getElementById("addCarBox").classList.remove("hidden");
    document.getElementById("carsBox").classList.remove("hidden");

    loadCars();
  }

  async function addCar(){
    const model = document.getElementById("model").value;
    const location = document.getElementById("location").value;
    const price = document.getElementById("price").value;

    const { error } = await supabase
      .from("cars")
      .insert([{ model, location, price }]);

    if(error){
      alert(error.message);
    }else{
      alert("Mashina qoâ€˜shildi âœ…");
      loadCars();
    }
  }

  async function loadCars(){
    const { data } = await supabase.from("cars").select("*");
    const box = document.getElementById("cars");
    box.innerHTML = "";

    data?.forEach(car=>{
      box.innerHTML += `
        <div class="car">
          <h3>${car.model}</h3>
          <p>${car.location}</p>
          <b>$${car.price} / kun</b>
        </div>
      `;
    });
  }
</script>

</body>
</html>
